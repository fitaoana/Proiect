@page
@model Proiect.Pages.Doctors.IndexModel

@{
    ViewData["Title"] = "Doctors";
}

<h1>Doctors</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-danger">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Specialization.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Doctor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-outline-danger">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-outline-dark">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
