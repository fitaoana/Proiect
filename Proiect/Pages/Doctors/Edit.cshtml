@page
@model Proiect.Pages.Doctors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Doctor.ID" />
            <div class="form-group">
                <label asp-for="Doctor.DoctorName" class="control-label"></label>
                <input asp-for="Doctor.DoctorName" class="form-control" />
                <span asp-validation-for="Doctor.DoctorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.SpecializationID" class="control-label">Patient Name</label>
                <select asp-for="Doctor.SpecializationID" class="form-control" asp-items="ViewBag.SpecializationID"></select>
                <span asp-validation-for="Doctor.SpecializationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Email" class="control-label"></label>
                <input asp-for="Doctor.Email" class="form-control" />
                <span asp-validation-for="Doctor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-outline-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
