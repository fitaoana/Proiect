@page
@model Proiect.Pages.Specializations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Specialization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Specialization.ID" />
            <div class="form-group">
                <label asp-for="Specialization.Name" class="control-label"></label>
                <input asp-for="Specialization.Name" class="form-control" />
                <span asp-validation-for="Specialization.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization.Description" class="control-label"></label>
                <input asp-for="Specialization.Description" class="form-control" />
                <span asp-validation-for="Specialization.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-outline-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
