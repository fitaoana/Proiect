@page
@model Proiect.Pages.Appointments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.ID" />
            <div class="form-group">
                <label asp-for="Appointment.DateTimeOfAppointment" class="control-label"></label>
                <input asp-for="Appointment.DateTimeOfAppointment" class="form-control" />
                <span asp-validation-for="Appointment.DateTimeOfAppointment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.PatientID" class="control-label">Patient Name</label>
                <select asp-for="Appointment.PatientID" class="form-control" asp-items="ViewBag.PatientID"></select>
                <span asp-validation-for="Appointment.PatientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.DoctorID" class="control-label">Doctor Name</label>
                <select asp-for="Appointment.DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
                <span asp-validation-for="Appointment.DoctorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-outline-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
